/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  //HAL_PWREx_EnableUltraLowPower();

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();

  MX_TIM2_Init();
  /* USER CODE BEGIN 2 */

  /* Retrieve last supply state from EEPROM */
  /* In case of a total power loss because the SCap was discharged below 1.9V */
  prev_state = load_eePROMqueue();
  prev_state = readFromEEPROM(EEPROM_BASE_ADDR + STATE_BACKUP_OFFSET);

  /* Restore unit state */
  switch (prev_state)
  {
  	  case APPshtdn_powered:
  	  case APPshtdn_unpowered:
  	  case ON_unpowered:
  	  case ON_powered:
  		  RunMode();
  		  state = ON_powered;
  		  break;
  	  case OFF_unpowered:
  	  case OFF_powered:
  		  LOWSIDE_SW_OPEN();
  		  CHARGER_BOOSTER_OFF();
  		  POWER_GOOD_2RPI_OFF();
  		  state = OFF_powered;
  		  break;
  	  default:
  		  RunMode();
  		  state = ON_powered;
  		  break;
  }

  if(state != prev_state) // Minimize eEPROM writes
  {

//	writeToEEPROM(EEPROM_BASE_ADDR + STATE_BACKUP_OFFSET, state);
	write_eePROMvalue(state);
  }

	/* Enable Button, power good IRQ and shutdown acknowledge IRQ */
    HAL_NVIC_EnableIRQ(EXTI0_1_IRQn);
    HAL_NVIC_EnableIRQ(EXTI4_15_IRQn);


  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
    EnterStopMode();

  }
  /* USER CODE END 3 */
}

